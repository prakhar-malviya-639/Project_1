<% layout("/layouts/boilerplate") %>

<body>
  <div class="row">
    <div class="col-8 offset-2">
      <h3>Edit your Listing</h3>
      <form
        method="POST"
        action="/listings/<%= listing._id %>?_method=PUT"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div class="md-3">
          <label for="title" class="form-Title">Title</label>
          <input
            name="listing[title]"
            value="<%= listing.title %>"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please fill out this field.</div>
        </div>

        <div class="md-3">
          <label for="description" class="form-label">Descripton</label>
          <textarea name="listing[description]" class="form-control" required>
        <%= listing.description %></textarea
          >
          <div class="invalid-feedback">Please enter a short description</div>
        </div>

        <div class="md-3">
          Original Listing Image <br />
          <img src="<%= originalImageUrl %>" />
        </div>

        <div class="md-3">
          <label for="image" class="form-label">Image Link</label>
          <input
            name="listing[image]"
            value="<%= listing.image %>"
            type="file"
            class="form-control"
          />
        </div>
        <div class="row">
          <div class="md-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input
              name="listing[price]"
              value="<%= listing.price %>"
              type="number"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Price should be vaild</div>
          </div>

          <div class="md-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input
              name="listing[country]"
              value="<%= listing.country %>"
              type="text"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please select a valid country</div>
          </div>
        </div>

        <div class="md-3">
          <label for="location" class="form-label">Location</label>
          <input
            name="listing[location]"
            value="<%= listing.location %>"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter a valid location</div>
        </div>

        <br /><br />
        <button class="btn btn-dark edit-btn">Edit</button>
      </form>
    </div>
  </div>
</body>
